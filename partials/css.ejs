body {
  background: rgb(245,245,245);
}

footer {
  background: rgb(0,0,0,0.8);
  font-size: 12px;
  color: white;
  padding: 7px;
  width: 500px;
  margin: auto;
}

h1 {
  font-family: 'Permanent Marker', cursive;
  font-size: 60px;
  text-align: center;
}

nav {
  background: rgb(0,0,0,0.8);
  color: white;
  width: 500px;
  padding-top: 0px;
  padding-left: 10px;
  padding-bottom: 10px;
  margin: auto;
}

nav a {
  color:white
}

nav a:hover {
  color:white;
  text-decoration: underline;
}

nav li {
  padding-left:5px;
  padding-right:20px;
  margin: auto;
}

.rating {
  font-size: 15px;
}

.shop {
  margin: auto;
  background: rgb(0,0,0,0.8);
  color: white;
  width: 500px;
  padding-top: 0px;
  padding-left: 10px;
  padding-bottom: 10px;
}

.shop a {
  color:white
}

.shop a:hover {
  color:white;
  text-decoration: underline;
}

.shop img {
  margin: auto;
  border: 5px solid black;
}

.shop li {
  list-style-type: none;
  font-size: 15px;
}

.shop ul {
  text-align: center;
  display: inline-table;
}

.shop h3 {
  margin: auto;
}

.stories {
  padding-top: 20px;
}

.card {
  margin: auto;
  margin-top: 10px;
  margin-bottom: 10px;
  border: 5px solid black;
}

.container {
  background-image: url("https://i.imgur.com/9bKeKLI.jpg");
  background-repeat: no-repeat;
  background-position: absolute;
  background-attachment: fixed;
  padding: 10px;
  padding-bottom: 0px;
}

.options {
  margin: auto;
}

