body {
  background: rgb(245,245,245);
}

footer {
  background: black;
  font-size: 12px;
  color: white;
  padding: 7px;
  width: 500px;
  margin: auto;
}

footer p {
  margin: auto;
}

h1 {
  font-family: 'Permanent Marker', cursive;
  font-size: 60px;
  text-align: center;
}

li {
  padding-left:5px;
  padding-right:20px;
  margin: auto;
}

nav {
  background: rgb(0,0,0,0.8);
  color: white;
  width: 500px;
  padding-top: 0px;
  padding-left: 10px;
  padding-bottom: 10px;
  margin: auto;
}

nav a {
  color:white
}

nav a:hover {
  color:white;
  text-decoration: underline;
}

.card {
  margin: auto;
  margin-top: 10px;
  margin-bottom: 10px;
  border: 5px solid black;
}

.container {
  background-image: url("https://i.imgur.com/9bKeKLI.jpg");
  background-repeat: no-repeat;
  background-position: absolute;
  background-attachment: fixed;
  padding: 10px;
  padding-bottom: 0px;
}
